    "paths": {
        "/login":{
            "post":{
                "summary": "Login de Usuário",
                "description": "Rota de login do usuário. Retorna um token de acesso",
                "tags": ["Auth"],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "items":{
                                    "email":{
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "auth": {
                                    "value": {
                                        "email": "your@email.com",
                                        "password": "YOUR_PASSWORD"
                                    }
                                }
                            }

                        }
                    }
                },
                "responses": {
                    "404": {
                        "description": "User Not Found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "properties":{
                                        "accessToken":{
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
