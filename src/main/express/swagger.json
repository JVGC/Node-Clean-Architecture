                        "type": "string"
                    },
                    "owner": {
                        "type": "string"
                    },
                    "imageURL": {
                        "type": "string"
                    },
                    "healthLevel":{
                        "type": "integer",
                        "min": 0,
                        "max": 100,
                        "default": 100
                    },
                    "status":{
                        "type": "string",
                        "enum": ["Running", "Alerting", "Stopped"]
                    }
