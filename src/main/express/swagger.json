{
    "openapi": "3.0.0",
    "info": {
        "title": "API Tractian Backend Role Test",
        "description": "Essa API tem como objetivo documentar as rotas do teste da Tractian",
        "contact": {
            "email": "joaovictorgarciacoelho@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [{
        "url": "http://localhost:3000",
        "description": "Dev API"
    }],
    "paths": {
        "/company":{
            "post":{
                "summary": "Cadastro de empresa",
                "description": "Essa rota será responsável por cadastrar um nova empresa. Apenas Super Admins podem acessar essa rota.",
                "tags": ["Companies"],
                "security": [{ "bearerAuth": []}],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Company"
                            },
                            "examples": {
                                "company": {
                                    "value": {
                                        "name": "Tractian",
                                        "code": "Tractian CPNJ"
                                    }
                                }
                            }

                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Code is already in use"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                }
            },
            "get":{
                "summary": "Listagem de Empresas",
                "description": "Essa rota será responsável por listar todas as empresas. Apenas Super Admins podem acessar essa rota.",
                "tags": ["Companies"],
                "security": [{ "bearerAuth": []}],
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Company"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company/{id}":{
            "get":{
                "summary": "Busca uma Company pelo ID",
                "description": "Essa rota será reponsável por retornar as informações de uma empresa pelo seu ID. Apenas Super Admins podem acessar essa rota. Admins só podem buscar pela própria empresa.",
                "tags": ["Companies"],
                "security": [{ "bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID da Empresa",
                    "required": true
                }],
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Company Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "summary": "Deleta uma Company pelo ID",
                "description": "Essa rota será reponsável por deletar as informações de uma empresa pelo seu ID. Apenas Super Admins podem acessar essa rota.",
                "tags": ["Companies"],
                "security": [{ "bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID da Empresa",
                    "required": true
                }],
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Company Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                }
            },
            "patch":{
                "summary": "Atualiza os dados de uma empresa",
                "description": "Essa rota será reponsável atualizar as informações de uma empresa pelo seu ID. Apenas Super Admins podem acessar essa rota.",
                "tags": ["Companies"],
                "security": [{ "bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID da Empresa",
                    "required": true
                }],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Company"
                            },
                            "examples": {
                                "company": {
                                    "value": {
                                        "name": "Tractian",
                                        "code": "Tractian CPNJ"
                                    }
                                }
                            }

                        }
                    }
                },
                "responses":{
                    "400": {
                        "description": "Code is already in use"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Company Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/unit":{
            "post":{
                "summary": "Cadastro de Unidade",
                "description": "Essa rota será responsável por cadastrar um nova unidade.",
                "tags": ["Units"],
                "security": [{ "bearerAuth": []}],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Unit"
                            },
                            "examples": {
                                "company": {
                                    "value": {
                                        "name": "Unit 1",
                                        "description": "Tractian Unit 1",
                                        "companyId": "TRACTIAN_ID"
                                    }
                                }
                            }

                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Company Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                }
            },
            "get":{
                "summary": "Listagem de Unidades",
                "description": "Essa rota será responsável por listar as unidades. \nAdmins e usuários normais verão apenas as unidades da sua empresa.\nSuper Admins poderão ver todas.",
                "tags": ["Units"],
                "security": [{ "bearerAuth": []}],
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Unit"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/unit/{id}":{
            "get":{
                "summary": "Busca uma Unidade pelo ID",
                "description": "Essa rota será reponsável por retornar as informações de uma unidade pelo seu ID. \n Admins e usuários normais só poderão buscar informações sobre unidades da sua empresa.",
                "tags": ["Units"],
                "security": [{ "bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID da Unidade",
                    "required": true
                }],
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Unit Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Unit"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "summary": "Deleta uma Unidade pelo ID",
                "description": "Essa rota será reponsável por deletar as informações de uma empresa pelo seu ID. \n Admins e usuários normais só poderão deletar da sua empresa.",
                "tags": ["Units"],
                "security": [{ "bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID da Unidade",
                    "required": true
                }],
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Unit Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Unit"
                                }
                            }
                        }
                    }
                }
            },
            "patch":{
                "summary": "Atualiza os dados de uma unidade",
                "description": "Essa rota será reponsável atualizar as informações de uma unidade pelo seu ID. \n Admins e usuários normais só poderão atualizar unidades da sua empresa.",
                "tags": ["Units"],
                "security": [{ "bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID da Unidade",
                    "required": true
                }],
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Unit"
                            },
                            "examples": {
                                "company": {
                                    "value": {
                                        "name": "Unit 1",
                                        "description": "Nova descrição"
                                    }
                                }
                            }

                        }
                    }
                },
                "responses":{
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Company Not found"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Company": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                }
            },
            "Unit": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "companyId":{
                        "type": "string"
                    }
                }
            }
        }
    },
    "securitySchemes" : {
        "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
        }
    }
}